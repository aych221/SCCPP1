    }

    function hideCerts() {
        var a = document.getElementById("certs");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }
    }
    function hideWork() {
        var a = document.getElementById("work");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }
    }
    function hideSkills() {
        var a = document.getElementById("skills");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }

    }
    function hideName() {
        var a = document.getElementById("name");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }
    }
    function hidePhone() {
        var a = document.getElementById("phone");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }
    }
    function hideEmail() {
        var a = document.getElementById("email");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }
    }
    function hideIntro() {
        var a = document.getElementById("intro");
        if (a.style.display != "block") {
            a.style.display = "block";
        }
        else {
            a.style.display = "none";
        }
    }


    function printPDF() {
        var x = document.getElementById("topbar");
        var y = document.getElementById("left");
        var z = document.getElementById("footer");
        //var w = document.getElementById("pgHeader");
        //var a = document.getElementById("printarea");
        //a.style.marginLeft = 0;
        y.style.display = "none";
        x.style.display = "none";
        //w.style.display = "none";
        z.style.display = "none";
        window.print();
        y.style.display = "block";
        x.style.display = "block";
        //w.style.display = "block";
        z.style.display = "block";
        //a.style.marginLeft = 200;
    }
</script>
