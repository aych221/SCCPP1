@page
@model SCCPP1.Pages.UserHomeModel
@{
    ViewData["Title"] = "User Home";
}
<style>
    /* Submit button styling*/
    .buttons {
        background-color: #00868B;
        color: white;
        padding: 12px 20px;
        border: 1px solid #00868B;
        border-radius: 4px;
        cursor: pointer;
    }

        .buttons:hover {
            background-color: #7E94CB;
            color: white;
            border: 1px solid #7E94CB;
        }

    /* Edit Main Profile button styling */
    .edit-profile-btn {
        background-color: #00868B;
        color: white;
        padding: 12px 20px;
        border: 1px solid #00868B;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        display: inline-block;
    }

        .edit-profile-btn:hover {
            background-color: #7E94CB;
            color: white;
            border: 1px solid #7E94CB;
        }

    .profile {
        border-radius: 5px;
        background-color: white;
        padding: 20px;
    }

    .transport {
        padding: 45px;
    }

    .search-container {
        margin-top: 20px;
        margin-bottom: 20px;
        float: right;
    }

        .search-container input[type=text] {
            padding: 10px;
            margin-right: 10px;
            border: none;
            border-radius: 3px;
            width: 250px;
            box-sizing: border-box;
            background-color: #f1f1f1;
        }

            .search-container input[type=text]:focus {
                background-color: #ddd;
                outline: none;
            }

    .subprofiles {
        display: flex;
        flex-wrap: wrap;
        justify-content: flex-start;
        align-items: center;
        margin-top: 20px;
    }

    .subprofile {
        border-radius: 5px;
        background-color: white;
        padding: 20px;
        margin: 0 10px 20px 0;
    }

        .subprofile:not(:last-child) {
            margin-bottom: 20px;
        }

    .subp {
        padding: 10px;
    }

    .subP {
        background-color: #00868B;
        color: white;
        padding: 12px 20px;
        border: 1px solid #00868B;
        border-radius: 4px;
        cursor: pointer;
    }

        .subP:hover {
            background-color: #7E94CB;
            color: white;
            border: 1px solid #7E94CB;
        }
</style>
<html>
<head>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script> <!--Icon reference-->
    <!--Get your own code at fontawesome.com-->
</head>
<body style="background-image: url(https://www.teamsparq.com/wp-content/themes/rural-sourcing/assets/images/backgrounds/stars-light-left.svg)">
    <div class="wrapper">
        <h1 style="color: #7E94CB; text-align: center;">USER HOME</h1>
        <div class="search-container">
            <form method="get" action="">
                <input type="text" placeholder="Search profiles" id="searchBox" name="searchTerm" />
                <button class="buttons" type="button" onclick="search()">Search</button>
            </form>
        </div>
        <i style='font-size:120px' class='far'>&#xf15c;</i>
        @* this provides the link to edit the main page, followed by the placing of the profiles*@
        <a class="transport" href="EditMainProfile"><button class="buttons">Edit Main Profile</button></a>
        <form method="post">
            <br>
            <i style='font-size:120px' class='far'>&#xf15c;</i>
            <input type="text" name="newSubP" placeholder="Name your new profile" required maxlength="50"/>
            <button value = "Submit" class="buttons" name="newProf">Create Profile</button>
            <br />

        </form>
            <form method="post">
            <div class="subprofiles">
                @Html.Raw(ViewData["subProfiles"])
            </div>
        </form>
    </div>
</body>
</html>

<script>
    function search() {
        var s = document.getElementById("searchBox").value;
        var subP = document.getElementsByClassName("subP");
        console.log(s);
        console.log(subP.length);
        for (i = 0; i < subP.length; i++) {
            console.log(subP[i].value.toUpperCase());
            if (subP[i].value.toUpperCase().includes(s.toUpperCase())) {
                subP[i].hidden = false;
                document.getElementById(subP[i].value).hidden = false;
            } else {
                subP[i].hidden = true;
                document.getElementById(subP[i].value).hidden = true;
            }
        }
    }
</script>