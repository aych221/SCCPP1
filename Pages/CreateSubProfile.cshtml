@page
@model SCCPP1.Pages.CreateSubProfileModel
@{
    ViewData["Title"] = "Create Sub Profile";
}

<style>
    body {
        font-family: sans-serif;
    }

    #red {
        padding: 10px;
        border-left: 5px solid #e4002b;
        margin: 10px
    }

    #blue {
        padding: 10px;
        border-left: 5px solid #002b49;
        margin: 10px
    }

    .accordion {
        background-color: #eee;
        color: #444;
        cursor: pointer;
        padding: 18px;
        width: 20%;
        border: none;
        text-align: left;
        outline: none;
        font-size: 15px;
        transition: 0.4s;
    }
   

    .panel {
        padding: 0 18px;
        display: none;
        background-color: white;
        overflow: hidden;
    }

        .active, .accordion:hover {
            background-color: #fff;
        }

    input[type=submit] {
        background-color: white;
        color: #0062F3;
        padding: 12px 20px;
        border: 1px solid #0062F3;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #0062F3;
            color: white;
            border: 1px solid #0062F3;
        }

    .sidenav {
  height: 90%;
  width: 200px;
  position: relative;
  z-index: 5;
  left: 0;
  background-color: white
  overflow-x: hidden;
  padding-top: 150px;
  position: fixed;
}

.all {
    position: relative;
    display: inline;
}

.printarea {
    margin-left: 200px;
    padding-left: 10px;
}

</style>

<body>
  <div id="all" class="all">
  <div id="sidenav" class="sidenav">
     

  <FORM name = "personal" method = "post">
     
    <br>
        @Html.Raw(ViewData["subTitle"])
        @Html.Raw(ViewData["name"])
        @Html.Raw(ViewData["phone"])
        @Html.Raw(ViewData["email"])
        @Html.Raw(ViewData["introNar"])
        @Html.Raw(ViewData["edu"])
        @Html.Raw(ViewData["work"])
        @Html.Raw(ViewData["skills"])
        @Html.Raw(ViewData["certs"])
         <button type="button" id = "prtButton" onclick="printPDF()">Print</button>
         <input type = "submit" value="Save Profile" />
  </form>  
</div>

<div id="printarea" class="printarea">
    <div id="pgHeader">
    <br>
    <h1>Create Sub Profile</h1>
    <br>
    </div>
  @Html.Raw(ViewData["nameDisplay"])
  @Html.Raw(ViewData["phoneDisplay"])
  @Html.Raw(ViewData["emailDisplay"])
  @Html.Raw(ViewData["introNarDisplay"])
  @Html.Raw(ViewData["eduDisplay"])
  @Html.Raw(ViewData["workDisplay"])
  @Html.Raw(ViewData["skillDisplay"])
  @Html.Raw(ViewData["certDisplay"])
</div>
</div>
</body>
   
   
    <script>
        function printPDF(){
             var x = document.getElementById("topbar");
             var y = document.getElementById("sidenav");
             var z = document.getElementById("footer");
             var w = document.getElementById("pgHeader");
             var a = document.getElementById("printarea");
                a.style.marginLeft = 0;
                y.style.display = "none";
                x.style.display = "none";
                w.style.display = "none";
                z.style.display = "none";
                window.print();
                y.style.display = "block";
                x.style.display = "block";
                w.style.display = "block";
                z.style.display = "block";
                a.style.marginLeft = 200;
        }

       
   var acc = document.getElementsByClassName("accordion");
    var i;

    for (i = 0; i < acc.length; i++) {
        acc[i].addEventListener("click", function () {
            this.classList.toggle("active");
            var panel = this.nextElementSibling;
            if (panel.style.display === "block") {
                panel.style.display = "none";
            }
            else { panel.style.display = "block"; }
        });
    }

    </script>